doctype html
html

  include styles.pug

  body

    include nav.pug

    h1 Login

    form(method='POST')
      if msg
        p #{msg}

      p
        label(for='email') Email
        input#email(type='email' name='email' placeholder='Email@email.com')
      p
        label(for='password') Password
        input#password(type='password' name='password' placeholder='*********')
      p
        button(type='submit') Login
